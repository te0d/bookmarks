<div class="row">
  <div class="col-xs-8">
    <h1>Bookmarks</h1>
    <table class="table table-striped">
    <% for bookmark in @bookmarks %>
      <tr>
        <td><a href="<%= bookmark.url %>"><%= bookmark.title %></a></td>
        <td><%= bookmark.tags.join(', ') %></td>
        <td>
          <a class="btn btn-danger btn-xs" href="/delete/<%= bookmark._id %>">
            <span class="glyphicon glyphicon-trash"></span>
          </a>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
  <div class="col-xs-4">
    <h2 class="text-right">Add New</h2>
    <form role="form" action="/new" method="post">
      <div class="form-group">
        <label for="url">URL</label>
        <input class="form-control" name="url" placeholder="Enter URL..." />
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" name="title" />
      </div>
      <div class="form-group">
        <label for="tags">Tags</label>
        <input class="form-control" name="tags" />
        <p class="help-block">Tags are space-separated.</p>
      </div>
      <button type="submit" class="btn btn-success">Add</button>
    </form>
  </div>
</div>
